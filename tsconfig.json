{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "sourceMap": false,
    "outDir": "./build/",
    "jsx": "react",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types",
      "./**/typings"
    ],
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2015",
      "es2015.promise"
    ],
    "rootDirs": [
      "./"
    ],
    "baseUrl": "."
  },
  "exclude": [
    "node_modules"
  ]
}